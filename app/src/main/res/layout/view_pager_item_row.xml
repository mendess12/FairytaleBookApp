<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/view_pager_Iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_250dp"
        android:layout_margin="@dimen/margin_10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/view_pager_name_Tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_pager_name_Tv"
        style="@style/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:text="@string/name"
        app:layout_constraintBottom_toTopOf="@+id/view_pager_fairytale_Tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_pager_Iv" />

    <TextView
        android:id="@+id/view_pager_fairytale_Tv"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0dp"
        android:layout_margin="@dimen/margin_8dp"
        android:maxLines="10"
        android:text="@string/fairytale"
        app:layout_constraintBottom_toTopOf="@+id/view_pager_continue_Tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_pager_name_Tv" />

    <TextView
        android:id="@+id/view_pager_continue_Tv"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginBottom="@dimen/margin_32dp"
        android:text="@string/fairytale_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_pager_fairytale_Tv" />
</androidx.constraintlayout.widget.ConstraintLayout>